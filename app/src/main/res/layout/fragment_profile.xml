<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ujjwalagrawal.spectrum.profile.view.ProfileFragment"
    android:id="@+id/swipe_layout_profile"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="profile" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_cardView"
        app:cardCornerRadius="8dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="12">

            <!--<ImageView-->
                <!--android:id="@+id/user_image"-->
                <!--android:layout_width="172dp"-->
                <!--android:layout_height="172dp"-->
                <!--android:layout_margin="10dp"-->
                <!--android:layout_weight="4"-->
                <!--android:src="@drawable/ic_person_pin_black_48dp" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/circle"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="85sp"
                android:paddingBottom="15dp"
                android:id="@+id/profile_letter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10sp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/md_black_1000"
                    />



                <TextView
                    android:id="@+id/user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/md_black_1000"
                    />




                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/md_black_1000"
                    />

            </LinearLayout>

        </LinearLayout>





    </android.support.v7.widget.CardView>
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp">-->

            <!--<Button-->
                <!--android:id="@+id/button1"-->
                <!--style="@style/Widget.AppCompat.Button"-->
                <!--android:layout_width="191dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:text="Single" />-->

            <!--<Button-->
                <!--android:id="@+id/button2"-->
                <!--style="@style/Widget.AppCompat.Button"-->
                <!--android:layout_width="191dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentTop="true"-->

                <!--android:text="Multiple" />-->
        <!--</RelativeLayout>-->


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_below="@+id/profile_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/profile_single"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_tabs"
                android:text="INDIVIDUAL"
                android:textSize="20dp"/>
            />

            <Button
                android:id="@+id/profile_multiple"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/color_tabs"
                android:text=" TEAM"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLay1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <View
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_black_1000"
                android:layout_weight="1" />

            <View
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_black_1000"
                android:layout_weight="1" />
        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/register_event_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">


        </android.support.v7.widget.RecyclerView>

        </ScrollView>

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
