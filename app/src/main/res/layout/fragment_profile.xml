<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ujjwalagrawal.spectrum.profile.view.ProfileFragment"
    android:id="@+id/swipe_layout_profile"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="profile" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/profile_cardView"
        app:contentPadding="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="12">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:src="@drawable/ic_person_pin_black_48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginTop="20dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"

                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/cardview_dark_background" />
            </LinearLayout>

        </LinearLayout>





    </android.support.v7.widget.CardView>
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp">-->

            <!--<Button-->
                <!--android:id="@+id/button1"-->
                <!--style="@style/Widget.AppCompat.Button"-->
                <!--android:layout_width="191dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:text="Single" />-->

            <!--<Button-->
                <!--android:id="@+id/button2"-->
                <!--style="@style/Widget.AppCompat.Button"-->
                <!--android:layout_width="191dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentTop="true"-->

                <!--android:text="Multiple" />-->
        <!--</RelativeLayout>-->
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coordinator_profile">

        </android.support.design.widget.CoordinatorLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:textSize="25dp"
            android:id="@+id/profile_text_before_button"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center_horizontal"

            android:textStyle="bold"

            android:background="@color/md_white_1000"
            />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_below="@+id/profile_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/profile_single"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_lime_500"
                android:text="SINGLE"
                android:textSize="20dp"/>
            />

            <Button
                android:id="@+id/profile_multiple"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/md_lime_500"
                android:text=" MULTIPLE"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLay1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <View
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_black_1000"
                android:layout_weight="1" />

            <View
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_black_1000"
                android:layout_weight="1" />
        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/register_event_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">


        </android.support.v7.widget.RecyclerView>


    </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
